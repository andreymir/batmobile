<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GyroModeActivity$PlaceholderFragment">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left|bottom|right">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/leftBlinker"
                android:layout_column="0"
                android:layout_gravity="left"
                android:src="@drawable/left_blinker" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageDirection"
                android:layout_column="1"
                android:src="@drawable/forward" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:id="@+id/righBlinker"
                android:layout_column="2"
                android:src="@drawable/right_blinker" />

        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_column="0"
                android:layout_span="3"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="20dp"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="POWER: "
                    android:id="@+id/textViewPowerState"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="X Axis: "
                    android:id="@+id/textViewXAxis"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Y Axis: "
                    android:id="@+id/textViewYAxis"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Z Axis: "
                    android:id="@+id/textViewZAxis"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="222dp"
                    android:layout_height="167dp"
                    android:text="POWER"
                    android:id="@+id/btnPower"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="-2dp"
                    android:longClickable="true"
                    android:layout_marginRight="30dp"
                    android:onClick="onPowerButtonClick" />


            </LinearLayout>
            </TableRow>
    </TableLayout>

</RelativeLayout>
